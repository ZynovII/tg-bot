{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "TELEGRAM BOT",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "lint": "eslint src/**/*.ts",
    "prettier": "prettier --write",
    "types": "tsc --project ./tsconfig.json --skipLibCheck --noemit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZynovII/tg-bot.git"
  },
  "keywords": [
    "telegram",
    "bot"
  ],
  "author": "ZynovII <igor.zynov@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ZynovII/tg-bot/issues"
  },
  "homepage": "https://github.com/ZynovII/tg-bot#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "telegraf": "^4.8.5"
  },
  "engines": {
    "node": "18.6.0",
    "npm": "8.13.2"
  }
}
