{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "telegram",
    "bot"
  ],
  "author": "ZynovII <igor.zynov@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ZynovII/tg-bot/issues"
  },
  "homepage": "https://github.com/ZynovII/tg-bot#readme",
  "devDependencies": {
    "@types/node": "^17.0.12",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.14.2"
}
